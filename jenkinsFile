pipeline{

agent any



tools {
        maven 'mvn'
        jdk 'jdk'
    }

stages{
       stage ('Initialize') {
            steps {
                    echo "JAVA_HOME = ${JAVA_HOME}"
                    echo "MAVEN_HOME = ${MAVEN_HOME}"
            }
        }


    stage('Build') {
     steps{
            bat "mvn clean install -Dcucumber.filter.tags=@Sanity -Dtestenv=qa  -DthreadCount=10"
        }
    }


    stage('Cucumber Reports'){
        steps{
            cucumber buildStatus: "SUCCESS",
            fileIncludePattern: "**/cucumber.json",
            jsonReportDirectory: 'target'
        }
    }
}

}
